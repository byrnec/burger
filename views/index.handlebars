<div class= "container">
  <div class="row">


     <div class="col-lg-6">
      <h2>Burgers that are not devoured!</h2>

      <ul>
        {{#each burgers}}
        {{#if devoured}}
        <div>
          {{burger_name}}

          <button class="btn btn-danger change-burger " data-id="{{id}}" data-newburger="false">
            MAKE THE BURGER!
          </button>

        </div>
        {{/if}}
        {{/each}}
      </ul>
    </div>
  


    <div class="col-lg-6">
      <h2>Burgers that are devoured!</h2>

      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        <div>
          {{burger_name}}

          <button class="change-burger btn btn-danger " data-id="{{id}}" data-newburger="true">
            DEVOUR THE BURGER!
          </button>

        </div>
        {{/unless}}
        {{/each}}
      </ul>
    </div>
 
</div>
   
  

