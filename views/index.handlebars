<h1>Burgers!</h1>

<h2>Burgers that are devoured!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
    {{!-- {{> burgers/burger-block devoured=true}} --}}
    {{burger_name}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that are not devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{!-- {{> burgers/burger-block devoured=false}} --}}
       {{burger_name}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked> devoured!<br>
    <input type="radio" name="devoured" value="0"> Eaten
  </div>

  <button type="submit">Add Burger</button>
</form>



<li>
	{{name}}

	<button class="change-sleep" data-id="{{id}}" data-newsleep="{{sleep}}">
		{{#if sleep}}EATING TIME TIME!{{else}}WAKE UP!{{/if}}
	</button>

	<button class="delete-burger" data-id="{{this.id}}">DELETE!</button>
</li>
